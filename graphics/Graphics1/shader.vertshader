#version 330 core

in vec3 pos;
in vec4 color;
in vec2 texcoord;

out vec4 Color;
out vec2 Texcoord;

layout (std140) uniform Matrices
{
	uniform mat4 view;
	uniform mat4 proj;
};

uniform mat4 model;

void main()
{
	Color = color;
	Texcoord = texcoord;
	gl_Position = proj * view * model * vec4(pos, 1.0);
}
