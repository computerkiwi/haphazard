#version 330 core
layout (location = 0) in vec2 pos;
layout (location = 1) in vec2 scale;

out VS_OUT {
    vec2 Scale;
} vs_out;

layout (std140) uniform Matrices
{
	uniform mat4 view;
	uniform mat4 proj;
};

void main()
{
    gl_Position = proj * view * vec4(pos.x, pos.y, 0.0, 1.0);
	vs_out.Scale = vec2(proj[0][0] * scale.x, proj[1][1] * scale.y) / 2;
}
