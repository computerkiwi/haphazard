#version 330 core
layout (location = 0) in vec2 pos;
layout (location = 0) in vec2 scale;

out vec2 Scale;

layout (std140) uniform Matrices
{
	uniform mat4 view;
	uniform mat4 proj;
};

void main()
{
    gl_Position = proj * view * vec4(pos.x, pos.y, 0.0, 1.0);
	Scale = vec2(0.2,0.267); //vec2(proj[0][0], proj[1][1]);
}
