#version 330 core

in vec3 pos;
in vec4 color;
in vec2 texcoord;

out vec4 Color;
out vec2 Texcoord;

layout (std140) uniform Matrices
{
	uniform mat4 view;
	uniform mat4 proj;
};

uniform mat4 model;
uniform vec4 texBox; // For animated sprites

void main()
{
	Color = color;
	Texcoord = texBox.xy + (texcoord * (texBox.zw - texBox.xy));
	gl_Position = proj * view * model * vec4(pos, 1.0);
}
