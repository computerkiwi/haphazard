#version 330 core

layout (location = 0) in vec2 pos;
layout (location = 1) in float texLayer;

out vec2 Texcoord;
out float TexLayer;

layout (std140) uniform Matrices
{
	uniform mat4 view;
	uniform mat4 proj;
};

void main()
{
	TexLayer = texLayer;
	gl_Position = proj * view * vec4(pos, 0.0f, 1.0f);
}
